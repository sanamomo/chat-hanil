<%= render "shared/secound_header"%>

<%= form_with model: @posts, url: posts_path(id: current_user.id), local: true do |f| %>

<%# render 'shared/error_messages', model: f.object %>

<div class="contents row">
  <div class="click-upload">
    <p>
      <%= t('posts.new.image') %>
    </p>
    <%= f.file_field :image, id:"item-image" %>
  </div>
  <div class="content_text">
    <%= f.text_area :content, placeholder: "text", rows: "3" %>
  </div>
  <div class="btn-contents">
    <%= f.submit "SEND" %>
    <%=link_to "#{ t('devise.shared.links.back')}", root_path, class:"back-btn" %>
  </div>
</div>
<% end %>