<%= render "shared/secound_header"%>

<div class='chat-room-form'>
  <h1><%= t('.new_chat') %></h1>
  <%=form_with model: @room, url: rooms_path, local: true do |f|%>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :"#{ t'.chat_name' }", class: 'chat-room-form__label'%>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: "#{ t'.chat_holder' }" %>
      </div>
    </div>
    <div class='chat-room-form__field'>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <label class='chat-room-form__label' for='chat_room_チャットメンバー'><%= t('.chat_member')%></label>
      </div>
      <div class='chat-room-form__field--right'>
        <select name ="room[user_ids][]">
          <option value=""><%= t('.chat_user')%></option>
          <% User.where.not(id: current_user.id).each do |user| %>
            <option value=<%= user.id %>> <%= user.nickname %></option>
          <% end %>
        </select>
        <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit :"#{ t'.submit' }", class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
