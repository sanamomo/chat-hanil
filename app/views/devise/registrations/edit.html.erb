<%= render "shared/secound_header"%>

<div class="container">
  <h1 class="form-title"> <%= t('devise.edit.info') %> </h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-wrapper">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class = 'form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">
            <%= t('devise.edit.new_user') %>
            </label>
            <%= f.text_field :nickname, autofocus: true, class: "input-default", maxlength: 10 %>
          </div>
        </div>
        <div class = 'form-group'>
          <div class='form-text-wrap'>
            <label class="form-text">
            <%= t('devise.edit.new_email') %>
            </label>
            <%= f.email_field :email, autocomplete: "email", class: "input-default", placeholder: "xxx@email.com" %>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">
              <%= t('devise.new.self_introduction') %>
            </label>
          </div>
          <%= f.text_area :self_introduction, class:"input-default", id:"self_introduction",maxlength:"1000" %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">
            <%= t('devise.edit.new_password')%>
            </label>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "input-default" %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">
            <%= t('devise.edit.confirm_new_password')%>
            </label>
          </div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-default" %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">
            <%= t('devise.edit.user_current_password')%>
          </label>
          <span class="indispensable"> <%= t('devise.new.required') %> </span>
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password",class: "input-default" %>
        </div>

        <%= f.submit :"#{ t('helpers.submit.update') }", class: "btn btn-primary form-submit-btn" %>
        <%# link_to  "マイページへ", users_path, class: "link-below-user-form" %>
      <% end %>
    </div>
  </div>
</div>


