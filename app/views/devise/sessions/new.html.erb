<%= render "shared/header"%>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        <%= t('activerecord.attributes.devise.new.sign_in')%>
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text"> <%= t('activerecord.attributes.user.email')%> </label>
        <span class="indispensable"> <%= t('devise.new.required') %> </span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text"> <%= t('activerecord.attributes.user.password')%></label>
        <span class="indispensable"> <%= t('devise.new.required') %> </span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class='login-btn'>
      <%= f.submit %>
    </div>
  </div>
  <% end %>